@{
    Layout = "_Layout";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Doctor Dashboard | MedicaLux</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <style>
        /* DOCTOR DASHBOARD PAGE CSS  */

        body {
            background: linear-gradient(135deg, #0a0f25, #13182e, #1c233d);
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            color: #d7d9e5;
        }

        /* NAVBAR */
        .doctor-nav {
            background: linear-gradient(90deg, #13182e, #1d2341, #283054);
            padding: 1rem 1.3rem;
            border-bottom: 1px solid rgba(255,255,255,0.15);
            backdrop-filter: blur(14px);
        }

            .doctor-nav .navbar-brand {
                color: #ffffff;
                font-weight: 600;
                font-size: 1.35rem;
                letter-spacing: 0.02em;
            }

            .doctor-nav .nav-link {
                color: #aeb4d1;
                margin-right: 15px;
                transition: 0.25s ease;
            }

                .doctor-nav .nav-link:hover,
                .doctor-nav .nav-link.active {
                    color: #fff;
                    transform: translateY(-2px);
                }

            .doctor-nav .btn-logout {
                background: #DDA447;
                border: none;
                color: #111;
                font-weight: 500;
                padding: 6px 18px;
                border-radius: 20px;
            }

                .doctor-nav .btn-logout:hover {
                    background: #eabb57;
                    color: #111;
                }

        /* DASHBOARD CARDS */
        .dash-card {
            background: rgba(255,255,255,0.07);
            border: 1px solid rgba(255,255,255,0.12);
            border-radius: 22px;
            padding: 1.7rem;
            backdrop-filter: blur(12px);
            transition: 0.25s ease;
            cursor: pointer;
        }

            .dash-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 35px rgba(0,0,0,0.35);
            }

            .dash-card i {
                font-size: 2rem;
                margin-bottom: 1rem;
                color: #DDA447;
            }

        h2.section-title {
            font-weight: 600;
            font-size: 1.6rem;
            color: #ffffff;
            margin-bottom: 1.4rem;
        }
    </style>
</head>

<body>

    <!-- =============================
         DOCTOR NAVBAR (hard-coded)
    ============================== -->
    <nav class="navbar navbar-expand-lg doctor-nav">
        <div class="container-fluid">

            <a class="navbar-brand" href="/Doctor/Dashboard">
                <i class="bi bi-heart-pulse-fill me-1"></i> Doctor Panel
            </a>

            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#doctorNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="doctorNav">
                <ul class="navbar-nav align-items-center">

                    <li class="nav-item">
                        <a class="nav-link active" href="/Doctor/Dashboard">Dashboard</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Doctor/Appointments">Appointments</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Doctor/Patients">Patients</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Doctor/Reports">Reports</a>
                    </li>

                    <li class="nav-item ms-3">
                        <a href="/Logout" class="btn btn-logout">Logout</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- =============================
         DOCTOR DASHBOARD CONTENT
    ============================== -->
    <div class="container py-5 mt-4">

        <h2 class="section-title">Welcome, Doctor </h2>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="dash-card text-center">
                    <i class="bi bi-calendar2-check"></i>
                    <h5> Appointments</h5>
                    <p>View and manage your schedule.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="dash-card text-center">
                    <i class="bi bi-people-fill"></i>
                    <h5>Patients</h5>
                    <p>Access patient records and history.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="dash-card text-center">
                    <i class="bi bi-file-earmark-medical"></i>
                    <h5>Reports</h5>
                    <p>View medical reports and analyses.</p>
                </div>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
