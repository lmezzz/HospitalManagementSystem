@model WebManagementSystem.Models.ViewModels.CreateUserViewModel
@{
    Layout = "_Layout";
}

<style>
    :root {
        --navy: #050816;
        --glass: rgba(255,255,255,0.08);
        --gradient-start: #8d79ff;
        --gradient-end: #ff9b61;
        --gold-light: #ffce70;
        --input-bg: rgba(255,255,255,0.08);
    }

    body {
        background: radial-gradient(circle at top left, #20254a, #050816 60%);
        color: white;
        font-family: 'Segoe UI', sans-serif;
    }

    /* SIDEBAR */
    .sidebar {
        width: 240px;
        height: 100vh;
        background: rgba(8,11,30,0.85);
        backdrop-filter: blur(18px);
        position: fixed;
        top: 0;
        left: 0;
        display: flex;
        flex-direction: column;
        padding: 2rem 1.5rem;
        border-right: 1px solid rgba(255,255,255,0.1);
        gap: 2.4rem;
    }

    .brand {
        font-size: 1.5rem;
        font-weight: 700;
        background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
        -webkit-background-clip: text;
        color: transparent;
    }

    .sidebar a {
        text-decoration: none;
        color: #c9cbe8;
        padding: .65rem .8rem;
        border-radius: 10px;
        display: flex;
        align-items: center;
        font-size: .95rem;
        transition: .2s;
    }

        .sidebar a:hover,
        .sidebar a.active {
            background: rgba(255,255,255,0.14);
            color: white;
        }

    /* MAIN */
    .admin-section {
        margin-left: 260px;
        padding: 2rem;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
        -webkit-background-clip: text;
        color: transparent;
        margin-bottom: 2rem;
    }

    .glass-card {
        width: 75%;
        background: rgba(255,255,255,0.06);
        padding: 2rem;
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,0.15);
        box-shadow: 0 8px 25px rgba(0,0,0,0.4);
        backdrop-filter: blur(14px);
    }

    label {
        font-weight: 500;
        margin-bottom: .3rem;
        display: block;
        color: #e0e3fa;
    }

    input, select {
        width: 100%;
        padding: .8rem;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.2);
        background: var(--input-bg);
        color: white;
        margin-bottom: 1.2rem;
        backdrop-filter: blur(10px);
    }

        input::placeholder {
            color: #dcdcec;
        }

        select option {
            background-color: #0d1128;
            color: white;
        }

    select {
        color-scheme: dark;
    }

    .submit-btn {
        padding: .9rem 1.6rem;
        background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
        border: none;
        border-radius: 12px;
        font-weight: 700;
        cursor: pointer;
        color: white;
        transition: .2s ease;
        font-size: 1rem;
    }

        .submit-btn:hover {
            opacity: .85;
        }

    .text-danger {
        color: #ff6b6b;
        font-size: 0.85rem;
        margin-top: -0.8rem;
        margin-bottom: 0.8rem;
        display: block;
    }
</style>

<!-- SIDEBAR -->
<div class="sidebar">
    <div class="brand">MedicaLux</div>

    <a asp-action="Dashboard">🏠 Dashboard</a>
    <a asp-action="Users">👥 Users</a>
    <a asp-action="CreateUser" class="active">➕ Add User</a>
    <a asp-action="DoctorList">🧑‍⚕️ View Doctors</a>
    <a asp-action="SystemReport">📊 Reports</a>
    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
        <button type="submit" style="background: none; border: none; color: #c9cbe8; padding: .7rem .8rem; border-radius: 10px; cursor: pointer; font-size: .95rem; width: 100%; text-align: left;">🚪 Logout</button>
    </form>
</div>

<!-- MAIN -->
<div class="admin-section">

    <div class="page-title">➕ Register New User</div>

    <div class="glass-card">
        <form asp-action="CreateUser" method="post">
            
            <label asp-for="FullName">Full Name *</label>
            <input asp-for="FullName" placeholder="Enter full name" required />
            <span asp-validation-for="FullName" class="text-danger"></span>

            <label asp-for="Email">Email *</label>
            <input asp-for="Email" type="email" placeholder="user@example.com" required />
            <span asp-validation-for="Email" class="text-danger"></span>

            <label asp-for="Username">Username *</label>
            <input asp-for="Username" placeholder="Choose a username" required />
            <span asp-validation-for="Username" class="text-danger"></span>

            <label asp-for="Password">Password *</label>
            <input asp-for="Password" type="password" placeholder="Create password" required />
            <span asp-validation-for="Password" class="text-danger"></span>

            <label asp-for="Phone">Phone</label>
            <input asp-for="Phone" placeholder="03XX-XXXXXXX" />
            <span asp-validation-for="Phone" class="text-danger"></span>

            <label asp-for="RoleId">Role *</label>
            <select asp-for="RoleId" required>
                <option value="">Select Role</option>
                <option value="1">Admin</option>
                <option value="2">Receptionist</option>
                <option value="3">Doctor</option>
                <option value="4">Lab Technician</option>
                <option value="5">Pharmacist</option>
                <option value="6">Billing Staff</option>
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>

            <label asp-for="IsActive">Status</label>
            <select asp-for="IsActive">
                <option value="true">Active</option>
                <option value="false">Inactive</option>
            </select>

            <button type="submit" class="submit-btn">Create User</button>

        </form>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
