@{
    Layout = "_Layout";
}

<style>
    :root {
        --navy: #050816;
        --glass: rgba(255,255,255,0.08);
        --gradient-start: #8d79ff;
        --gradient-end: #ff9b61;
        --gold-light: #ffce70;
        --table-border: rgba(255,255,255,0.12);
    }

    body {
        background: radial-gradient(circle at top left, #20254a, #050816 60%);
        color: white;
        font-family: 'Segoe UI', sans-serif;
        overflow-x: hidden;
    }

    /* SIDEBAR */
    .sidebar {
        width: 240px;
        height: 100vh;
        padding: 2rem 1.5rem;
        background: rgba(8,11,30,0.8);
        backdrop-filter: blur(18px);
        position: fixed;
        top: 0;
        left: 0;
        display: flex;
        flex-direction: column;
        gap: 2.4rem;
        border-right: 1px solid rgba(255,255,255,0.15);
    }

    .brand {
        font-size: 1.5rem;
        font-weight: 700;
        background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
        -webkit-background-clip: text;
        color: transparent;
    }

    .sidebar a {
        text-decoration: none !important;
        color: #c9cbe8;
        padding: .65rem .8rem;
        border-radius: 10px;
        transition: .2s;
        font-size: .95rem;
        display: flex;
        align-items: center;
        font-weight: 500;
    }

        .sidebar a:hover,
        .sidebar a.active {
            background: rgba(255,255,255,0.14);
            color: white;
        }

    /* MAIN */
    .admin-section {
        margin-left: 260px;
        padding: 2rem 2.5rem;
    }

    .page-title {
        font-size: 2.2rem;
        font-weight: 700;
        background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
        -webkit-background-clip: text;
        color: transparent;
        margin-bottom: 2.5rem;
    }

    /* TABLE WRAPPER */
    .table-wrap {
        width: 90%;
        background: rgba(255,255,255,0.06);
        padding: 2rem;
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,0.15);
        box-shadow: 0 8px 25px rgba(0,0,0,0.45);
        backdrop-filter: blur(14px);
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        text-align: left;
        padding: .9rem;
        background: rgba(255,255,255,0.12);
        font-weight: 600;
        color: #fff;
    }

    td {
        padding: .9rem;
        border-bottom: 1px solid var(--table-border);
        color: #dfe2ff;
        font-size: .95rem;
    }

    .action-btns {
        display: flex;
        gap: .5rem;
    }

    .edit-btn, .delete-btn {
        padding: .5rem .8rem;
        border-radius: 8px;
        font-size: .85rem;
        font-weight: 600;
        cursor: pointer;
        border: none;
    }

    .edit-btn {
        background: linear-gradient(90deg, #7ab8ff, #9cd4ff);
        color: #000;
    }

        .edit-btn:hover {
            opacity: .85;
        }

    .delete-btn {
        background: rgba(255, 80, 80, 0.9);
        color: white;
    }

        .delete-btn:hover {
            opacity: .85;
        }
</style>


