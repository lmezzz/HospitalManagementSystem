@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login | Hospital Management System</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>

        /*  Global aesthetic background */
        body {
            height: 100vh;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: radial-gradient(circle at top, #1a2340, #0c1529 60%);
            font-family: 'Segoe UI', sans-serif;
        }

        /* The glassy login card  */
        .login-card {
            width: 400px;
            padding: 2.5rem 2rem;
            border-radius: 22px;
            background: rgba(255, 255, 255, 0.08);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.15);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.35);
            animation: fadeIn 0.6s ease;
        }

        @@keyframes fadeIn {
            0% {
                opacity: 0;
                transform: translateY(15px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Title + subtitle */
        .brand-title {
            font-size: 1.7rem;
            font-weight: 700;
            color: #ffffff;
            text-align: center;
            letter-spacing: .5px;
        }

        .brand-subtitle {
            font-size: 1rem;
            color: #c7cce2;
            text-align: center;
            margin-bottom: 1.8rem;
        }

        /*  Labels + Inputs  */
        .form-label {
            color: #dde3ff;
            font-weight: 500;
        }

        .form-control {
            height: 48px;
            border-radius: 14px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            background: rgba(255,255,255,0.12);
            color: #ffffff;
        }

            .form-control::placeholder {
                color: #b4bdd8;
            }

            .form-control:focus {
                border-color: #6f9cff;
                box-shadow: 0 0 0 3px rgba(111, 156, 255, 0.25);
                background: rgba(255,255,255,0.18);
            }

        /*  Login Button */
        .btn-login {
            height: 48px;
            width: 100%;
            border-radius: 14px;
            border: none;
            font-weight: 600;
            background: linear-gradient(135deg, #5f7fff, #324dff);
            color: white;
            transition: 0.25s ease;
        }

            .btn-login:hover {
                background: linear-gradient(135deg, #6f8dff, #3e5bff);
                box-shadow: 0 10px 25px rgba(80, 100, 255, 0.35);
            }

        /*   Helper links */
        .helper-links {
            font-size: 0.85rem;
            color: #c7cce2;
        }

            .helper-links a {
                color: #9eb7ff;
            }

                .helper-links a:hover {
                    text-decoration: underline;
                }

       

                .btn-login {
                    background: linear-gradient(135deg, #d4a24c, #c89334);
                }
                .btn-login:hover {
                    background: linear-gradient(135deg, #e0b25a, #d49c39);
                    box-shadow: 0 10px 25px rgba(212, 156, 57, 0.35);
                }
                

    </style>
</head>

<body>

    <div class="login-card">
        <div class="brand-title">Hospital Management System</div>
        <div class="brand-subtitle">Login</div>

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Email / Username</label>
                <input type="text" name="Email" class="form-control" placeholder="Enter your username">
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="Password" class="form-control" placeholder="Enter your password">
            </div>

            <div class="d-flex justify-content-between mb-3 helper-links">
                <div>
                    <input type="checkbox" id="rememberMe">
                    <label for="rememberMe">Remember me</label>
                </div>
                <a href="#">Forgot password?</a>
            </div>

            <button type="submit" class="btn-login">Login</button>
        </form>
    </div>

</body>
</html>
