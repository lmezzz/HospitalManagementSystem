<style>
    /* ===================== VARIABLES ===================== */
    :root {
        --navy: #1a1d33;
        --navy-soft: #0c1224;
        --gold: #DDA447;
        --gold-light: #ffca3a;
        --text-main: #c7c9d6;
        --muted: #8f93a7;
        --gradient-start: #5f4bff;
        --gradient-end: #ff8f5a;
        --radius-lg: 26px;
        --radius-sm: 18px;
    }

<div class="hero-wrapper">

    <!-- NAVBAR (for public / patient landing) -->
    <nav class="navbar navbar-expand-lg hms-nav">
        <div class="container">
            <a class="navbar-brand fw-semibold" href="#">
                <span class="brand-mark"></span> MedicaLux
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="mainNav">
                <ul class="navbar-nav align-items-lg-center gap-lg-3">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#services">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#doctors">Doctors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about">About</a>
                    </li>

                    <li class="nav-item">
                        <a class="btn btn-outline-light btn-sm rounded-pill px-3" asp-controller="Account" asp-action="Login">
                            Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-gold btn-sm rounded-pill px-4 ms-lg-2" href="#">
                            Book Appointment
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- HERO SECTION -->
    <section class="hero container py-5">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <span class="badge bg-soft-gold text-gold mb-3">
                    Premium Healthcare, Reimagined
                </span>

                <h1 class="hero-title mb-3">
                    Protecting Your Health with
                    <span class="gradient-text">Exceptional Care.</span>
                </h1>

                <p class="hero-subtitle mb-4">
                    An elegant hospital management experience for patients, doctors and staff –
                    combining modern technology with trusted medical expertise.
                </p>

                <div class="d-flex flex-wrap gap-3 align-items-center">
                    <a href="#" class="btn btn-gold rounded-pill px-4 py-2">
                        Get Started
                    </a>
                </li>


            </ul>
        </div>

    </div>
</nav>


<!-- ===================== HERO ===================== -->
<section class="hero container py-5">
    <div class="row align-items-center g-5">
        <div class="col-lg-6">
            <span class="premium-text">
                Premium Healthcare, Reimagined
            </span>


            <h1 class="hero-title mb-3">
                Protecting Your Health with
                <span class="gradient-text">Exceptional Care.</span>
            </h1>

            <p class="hero-subtitle mb-4">
                An elegant hospital management experience for patients, doctors and staff –
                combining modern technology with trusted medical expertise.
            </p>

            <div class="d-flex flex-wrap gap-3 align-items-center">
                <a href="#" class="btn btn-gold rounded-pill px-4 py-2">
                    Get Started
                </a>
            </div>

            <div class="d-flex gap-4 mt-4 hero-badges">
                <div>
                    <div class="stat-number">10+</div>
                    <div class="stat-label">Years of Excellence</div>
                </div>
                <div>
                    <div class="stat-number">8000+</div>
                    <div class="stat-label">Satisfied Patients</div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 d-flex justify-content-center">
            <div class="hero-card glass-card">
                <div class="hero-image-circle"></div>
                <img src="https://images.pexels.com/photos/3714743/pexels-photo-3714743.jpeg?auto=compress&cs=tinysrgb&w=600"
                     class="img-fluid hero-doctor" alt="Doctor" />
                <div class="hero-mini-card glass-card-sm">
                    <i class="bi bi-heart-pulse-fill"></i>
                    <div>
                        <div class="mini-label">24/7 Emergency</div>
                        <div class="mini-value">
                            <i class="bi bi-heart-pulse-fill heartbeat-icon"></i>
                            Priority Care
                        </div>

                    </div>
                </div>
                <div class="hero-mini-card glass-card-sm bottom-right">
                    <i class="bi bi-shield-check"></i>
                    <div>
                        <div class="mini-label">ISO Certified</div>
                        <div class="mini-value">Secure & Trusted</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- ===================== SERVICES ===================== -->
<section id="services" class="section container py-5">
    <div class="section-header d-flex justify-content-between align-items-end mb-4">
        <div>
            <span class="section-kicker">Services</span>
            <h2 class="section-title">A Curated Range of Medical Services</h2>
            <p class="section-subtitle">
                From routine checkups to complex surgery, choose from our carefully designed service lines.
            </p>
        </div>
        <a href="#" class="btn btn-outline-light rounded-pill px-4">View All</a>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="service-card glass-card h-100">
                <div class="service-icon">
                    <i class="bi bi-briefcase-medical"></i>
                </div>
                <h5>Surgery</h5>
                <p>State-of-the-art surgical suites with highly experienced consultants and staff.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="service-card glass-card h-100">
                <div class="service-icon">
                    <i class="bi bi-syringe"></i>
                </div>
                <h5>Vaccination</h5>
                <p>Comprehensive immunization programs for children, adults and corporate clients.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="service-card glass-card h-100">
                <div class="service-icon">
                    <i class="bi bi-ambulance"></i>
                </div>
                <h5>Emergency</h5>
                <p>24/7 emergency department designed for rapid response and critical care.</p>
            </div>
        </div>
    </div>
</section>


<!-- ===================== STATS ===================== -->
<section class="stats-strip text-center">
    <div class="row g-4 mx-0">
        <div class="col-md-3">
            <div class="stat-number-lg">10+</div>
            <div class="stat-label">Years With You</div>
        </div>

        <div class="col-md-3">
            <div class="stat-number-lg">200+</div>
            <div class="stat-label">Awards</div>
        </div>

        <div class="col-md-3">
            <div class="stat-number-lg">25+</div>
            <div class="stat-label">Specialist Doctors</div>
        </div>

        <div class="col-md-3">
            <div class="stat-number-lg">8000+</div>
            <div class="stat-label">Patients Treated</div>
        </div>
    </div>
</section>


<!-- ABOUT -->
<section id="about" class="section container py-5">
    <div class="row g-5 align-items-center">
        <div class="col-lg-6">
            <div class="about-grid">
                <img src="https://images.pexels.com/photos/6129685/pexels-photo-6129685.jpeg?auto=compress&cs=tinysrgb&w=600"
                     class="about-img main" />
                <img src="https://images.pexels.com/photos/8460047/pexels-photo-8460047.jpeg?auto=compress&cs=tinysrgb&w=600"
                     class="about-img secondary" />
                <div class="about-badge glass-card-sm">
                    <span class="stat-number-lg">10</span>
                    <span class="stat-label">Years of Experience</span>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <span class="section-kicker">About Us</span>
            <h2 class="section-title">A Luxury Approach to Everyday Care</h2>
            <p class="section-subtitle mb-4">
                We blend clinical excellence with a calm, refined environment to create a hospital
                experience that feels considered, safe and beautifully simple.
            </p>

            <div class="row g-3">
                <div class="col-sm-6">
                    <div class="about-pill">
                        <i class="bi bi-phone-vibrate"></i> 24/7 Emergency Help
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="about-pill">
                        <i class="bi bi-person-heart"></i> Qualified Specialists
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="about-pill">
                        <i class="bi bi-clipboard-pulse"></i> Evidence-based Care
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="about-pill">
                        <i class="bi bi-shield-lock"></i> Secure Records
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- ===================== FOOTER ===================== -->
<footer class="footer">
    <div class="row mx-0 justify-content-between">

        <div class="col-md-3">
            <h4 class="text-white fw-bold">MedicaLux</h4>
            <p class="text-muted small">Premium healthcare with elegance and trust.</p>
        </div>

        <div class="col-md-3">
            <h6 class="footer-heading">Quick Links</h6>
            <a href="#">Doctors</a><br>
            <a href="#">Services</a><br>
            <a href="#">Contact</a>
        </div>

        <div class="col-md-3">
            <h6 class="footer-heading">Visit Us</h6>
            <p class="text-muted small">123 Medica Lane</p>
            <p class="text-muted small">+92-000-0000000</p>
        </div>

    </div>
</footer>
