<style>
    /* ===================== VARIABLES ===================== */
    :root {
        --navy: #1a1d33;
        --navy-soft: #0c1224;
        --gold: #DDA447;
        --gold-light: #ffca3a;
        --text-main: #c7c9d6;
        --muted: #8f93a7;
        --gradient-start: #5f4bff;
        --gradient-end: #ff8f5a;
        --radius-lg: 26px;
        --radius-sm: 18px;
    }

    body {
        background: radial-gradient(circle at top left, #1e2347 0%, var(--navy) 50%, var(--navy) 100%);
        font-family: 'Poppins', sans-serif;
        color: var(--text-main);
        overflow-x: hidden;
        margin: 0 !important;
        padding: 0 !important;
    }

    /* ===================== NAVBAR ===================== */
    .hms-nav {
        background: linear-gradient(90deg, #050816f2, #050816cc);
        border-bottom: 1px solid #1b1f35;
        backdrop-filter: blur(18px);
        width: 100%;
        padding-left: 3rem !important;
        padding-right: 3rem !important;
    }

        .hms-nav .navbar-brand {
            color: #fff;
            font-weight: 600;
            font-size: 1.4rem;
            letter-spacing: 0.04em;
        }

    .brand-mark {
        width: 16px;
        height: 16px;
        background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
        display: inline-block;
        border-radius: 6px;
        margin-right: 8px;
    }

    .hms-nav .nav-link {
        color: var(--muted);
        font-size: 0.95rem;
        transition: 0.25s;
    }

        .hms-nav .nav-link:hover,
        .hms-nav .nav-link.active {
            color: #fff;
            transform: translateY(-1px);
        }

    .btn-gold {
        background: var(--gold);
        color: #111;
        border: none;
        font-weight: 500;
    }

        .btn-gold:hover {
            background: var(--gold-light);
        }

    /* ===================== HERO ===================== */
    .gradient-text {
        background: linear-gradient(90deg, #8d79ff, #d277ff, #ff9b61);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .hero-card {
        width: min(360px, 100%);
        text-align: center;
    }

    .hero-image-circle {
        position: absolute;
        inset: -40%;
        background: radial-gradient(circle at top, var(--gradient-start), transparent 60%);
        opacity: .9;
    }

    .hero-doctor {
        position: relative;
        border-radius: 180px;
        z-index: 1;
    }

    .hero-mini-card {
        position: absolute;
        left: 1.2rem;
        bottom: 1.2rem;
        display: flex;
        align-items: center;
        gap: .6rem;
        z-index: 2;
        font-size: 0.8rem;
    }

        .hero-mini-card.bottom-right {
            left: auto;
            right: 1.2rem;
            right: 1.2rem;
            bottom: auto;
            top: 1.4rem;
        }

        .hero-mini-card i {
            font-size: 1.3rem;
            color: var(--gold);
        }

    .mini-label {
        font-size: 0.75rem;
    }

    .mini-value {
        font-weight: 500;
    }

    .heartbeat-icon {
        color: #ff6b6b;
        animation: heartbeat 1.4s infinite ease-in-out;
        margin-right: 6px;
    }

    @@keyframes heartbeat {
        0% {
            transform: scale(1);
        }

        25% {
            transform: scale(1.18);
        }

        40% {
            transform: scale(1);
        }

        60% {
            transform: scale(1.18);
        }

        100% {
            transform: scale(1);
        }
    }

    .premium-text {
        color: var(--gold);
        font-weight: 500;
        letter-spacing: 0.5px;
        font-size: 0.95rem;
    }



    /* GLASS CARD */
    .glass-card {
        background: radial-gradient(circle at top left, #ffffff22, #ffffff04);
        border-radius: 30px;
        padding: 1.8rem;
        border: 1px solid #ffffff22;
        box-shadow: 0 18px 55px rgba(3, 5, 25, 0.9);
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(16px);
    }

    .glass-card-sm {
        background: #ffffff0e;
        border-radius: var(--radius-sm);
        padding: 1rem 1.2rem;
        border: 1px solid #ffffff22;
        backdrop-filter: blur(16px);
    }



    /* Floating Labels */
    .hero-mini-card {
        position: absolute;
        background: rgba(255,255,255,0.7);
        backdrop-filter: blur(14px);
        border-radius: 12px;
        padding: 10px 14px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.85rem;
    }

    .hero-mini-top {
        top: 14px;
        right: 14px;
    }

    .hero-mini-bottom {
        bottom: 14px;
        left: 14px;
    }

    .hero-mini-card i {
        font-size: 1.2rem;
        color: #b58c28;
    }


    /* ===================== SERVICES ===================== */
    .section-title {
        color: white;
        font-size: 2rem;
        font-weight: 600;
    }

    .section-subtitle {
        color: var(--muted);
    }

    .service-card {
        background: #ffffff0d;
        border: 1px solid #ffffff22;
        padding: 2rem;
        border-radius: var(--radius-lg);
        transition: 0.25s;
        backdrop-filter: blur(12px);
    }

        .service-card:hover {
            transform: translateY(-5px);
            border-color: #ffffff44;
        }

    .service-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: #ffffff15;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--gold);
        font-size: 1.8rem;
        margin-bottom: 1rem;
    }

    /* ===================== STATS ===================== */
    .stats-strip {
        background: #080c1b;
        padding: 3rem 0;
    }

    .stat-number-lg {
        font-size: 2rem;
        color: var(--gold);
        font-weight: 600;
    }

    /* ===================== ABOUT  ===================== */
    /* About section */
    .about-grid {
        position: relative;
    }

    .about-img {
        border-radius: 26px;
        object-fit: cover;
        box-shadow: 0 16px 45px rgba(0, 0, 0, 0.7);
    }

        .about-img.main {
            width: 80%;
        }

        .about-img.secondary {
            width: 48%;
            position: absolute;
            right: 0;
            bottom: -14%;
        }

    .about-badge {
        position: absolute;
        left: 6%;
        bottom: 6%;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: .1rem;
    }

    .about-pill {
        border-radius: 999px;
        border: 1px solid #262c4b;
        padding: .6rem 1rem;
        font-size: 0.85rem;
        color: var(--muted);
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        background: #050816c7;
    }

        .about-pill i {
            color: var(--gold);
        }


    /* ===================== FOOTER ===================== */
    .footer {
        border-top: 1px solid #1f2340;
        padding: 3rem 4rem;
        background: #050816;
    }

    .footer-heading {
        color: var(--gold);
        letter-spacing: .15em;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .footer a {
        color: var(--muted);
        text-decoration: none;
    }

        .footer a:hover {
            color: var(--gold);
        }
</style>


