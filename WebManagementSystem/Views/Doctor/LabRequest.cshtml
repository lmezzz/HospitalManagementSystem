@model WebManagementSystem.Models.ViewModels.DoctorLabRequestViewModel
@{
    Layout = "_Layout";
}

<style>
    :root {
        --navy: #050816;
        --glass: rgba(255,255,255,0.08);
        --gradient-start: #8d79ff;
        --gradient-end: #ff9b61;
        --gold-light: #ffce70;
    }

    body {
        background: radial-gradient(circle at top left, #20254a, #050816 60%);
        color: black;
        font-family: 'Segoe UI', sans-serif;
        overflow-x: hidden;
    }

    /* ---------- SIDEBAR ---------- */
    .sidebar {
        width: 240px;
        height: 100vh;
        background: rgba(8,11,30,0.8);
        backdrop-filter: blur(18px);
        padding: 2rem 1.5rem;
        position: fixed;
        left: 0;
        top: 0;
        display: flex;
        flex-direction: column;
        gap: 2.4rem;
        border-right: 1px solid rgba(255,255,255,0.1);
    }

    .brand {
        font-size: 1.5rem;
        font-weight: 700;
        background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
        -webkit-background-clip: text;
        color: transparent;
    }

    .sidebar a {
        text-decoration: none !important;
        color: #c9cbe8;
        padding: .65rem .8rem;
        border-radius: 10px;
        font-weight: 500;
        font-size: .95rem;
        display: flex;
        align-items: center;
        gap: .7rem;
        transition: .2s ease;
    }

        .sidebar a:hover,
        .sidebar a.active {
            background: rgba(255,255,255,0.14);
            color: white;
        }

    /* ---------- MAIN CONTENT ---------- */
    .doctor-section {
        margin-left: 260px;
        padding: 2rem 2.5rem;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 2rem;
        background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
        -webkit-background-clip: text;
        color: transparent;
    }

    /* ---------- FORM CARD ---------- */
    .glass-card {
        background: rgba(255,255,255,0.06);
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,0.15);
        backdrop-filter: blur(15px);
        padding: 2rem;
        box-shadow: 0 10px 25px rgba(0,0,0,0.45);
        width: 65%;
    }

    .section-title {
        color: #ffff;
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    label {
        font-size: 1rem;
        color: #e0e3fa;
        font-weight: 500;
        display: block;
        margin-bottom: .4rem;
    }

    select, textarea, input {
        width: 100%;
        padding: .8rem;
        border-radius: 12px;
        background: rgba(255,255,255,0.08);
        border: 1px solid rgba(255,255,255,0.2);
        color: white;
        margin-bottom: 1.2rem;
        backdrop-filter: blur(10px);
        font-size: .95rem;
    }

        select:focus, textarea:focus, input:focus {
            outline: none;
            border-color: var(--gold-light);
        }

    textarea {
        height: 130px;
        resize: none;
    }

    /* ---------- BUTTON ---------- */
    .submit-btn {
        padding: .9rem 1.6rem;
        border: none;
        border-radius: 12px;
        background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
        color: white;
        font-size: 1rem;
        font-weight: 700;
        cursor: pointer;
        transition: .2s ease;
    }

        .submit-btn:hover {
            opacity: .85;
        }

    select option {
        background-color: #0d1128; 
        color: white;
    }


    select {
        color-scheme: dark;
    }
</style>

<!-- SIDEBAR -->
<div class="sidebar">
    <div class="brand">MedicaLux</div>

    <a asp-action="Dashboard">🏥 Dashboard</a>
    <a asp-action="CurrentSessionLatest">👤 Current Session</a>
    <a asp-action="LabRequest" class="active">🧪 Lab Request</a>
    <a asp-action="Prescriptions">💊 Prescriptions</a>
    <a asp-action="LabReports">📄 Lab Reports</a>
    <a asp-action="Appointments">📅 Appointments</a>
    <a asp-action="Patients">🧍 All Patients</a>
    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
        <button type="submit" style="background: none; border: none; color: #c9cbe8; padding: .7rem .8rem; border-radius: 10px; cursor: pointer; font-size: .95rem; width: 100%; text-align: left;">🚪 Logout</button>
    </form>
</div>

<!-- MAIN CONTENT -->
<div class="doctor-section">

    <div class="page-title">🧪 Lab Test Request</div>

    @if (Model?.HasVisit != true || Model.Form == null)
    {
        <div class="glass-card">
            <div class="section-title">Select a Visit</div>
            @if (Model?.RecentVisits != null && Model.RecentVisits.Any())
            {
                <p class="info-text" style="color:#e0e3fa;">Choose a recent visit to attach the lab request:</p>
                <table style="width:100%; color:white; border-collapse:collapse;">
                    <thead>
                        <tr style="background:rgba(255,255,255,0.1);">
                            <th style="padding:0.8rem; text-align:left;">Patient</th>
                            <th style="padding:0.8rem; text-align:left;">Visit Time</th>
                            <th style="padding:0.8rem; text-align:left;">Diagnosis</th>
                            <th style="padding:0.8rem; text-align:left;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var visit in Model.RecentVisits)
                        {
                            <tr style="border-bottom:1px solid rgba(255,255,255,0.08);">
                                <td style="padding:0.8rem;">@visit.PatientName</td>
                                <td style="padding:0.8rem;">@(visit.VisitTime?.ToString("dd MMM yyyy · hh:mm tt") ?? (visit.CreatedAt?.ToString("dd MMM yyyy") ?? "N/A"))</td>
                                <td style="padding:0.8rem;">@(string.IsNullOrEmpty(visit.Diagnosis) ? "—" : visit.Diagnosis)</td>
                                <td style="padding:0.8rem; text-align:right;">
                                    <a asp-action="LabRequest" asp-route-visitId="@visit.VisitId" class="submit-btn" style="padding:0.6rem 1.2rem;">Select</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="info-text" style="color:#e0e3fa;">No visits found. Start a visit from an appointment before requesting labs.</p>
                <a asp-controller="Visit" asp-action="Create" class="submit-btn" style="display:inline-block; margin-top:1rem;">Create Visit</a>
            }
        </div>
    }
    else
    {
        <div class="glass-card">
            <div class="section-title">Patient Details</div>
            <div class="info-text"><strong>Patient:</strong> @Model.Form.PatientName</div>
            <div class="info-text"><strong>Doctor:</strong> @Model.Form.DoctorName</div>
            <div class="info-text"><strong>Visit ID:</strong> #@Model.Form.VisitId</div>
            @if (!string.IsNullOrEmpty(Model.Form.ClinicalNotes))
            {
                <div class="info-text"><strong>Notes:</strong> @Model.Form.ClinicalNotes</div>
            }
        </div>

        <div class="glass-card">
            <div class="section-title">Lab Order Form</div>
            <form asp-controller="Lab" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="VisitId" value="@Model.Form.VisitId" />
                <input type="hidden" name="PatientId" value="@Model.Form.PatientId" />
                <input type="hidden" name="DoctorId" value="@Model.Form.DoctorId" />

                <label>Select Tests</label>
                <div style="display:grid; grid-template-columns: repeat(auto-fit, minmax(220px,1fr)); gap:0.8rem; margin-bottom:1.2rem;">
                    @foreach (var test in Model.Form.AvailableTests)
                    {
                        <label style="display:flex; align-items:center; gap:0.6rem; padding:0.6rem; border:1px solid rgba(255,255,255,0.15); border-radius:10px;">
                            <input type="checkbox" name="LabTestIds" value="@test.LabTestId" />
                            <span>
                                <strong>@test.TestName</strong><br />
                                <small>@test.Category · PKR @test.Cost.ToString("N0")</small>
                            </span>
                        </label>
                    }
                </div>

                <label>Priority</label>
                <select name="Priority">
                    <option value="Normal" selected>Normal</option>
                    <option value="Urgent">Urgent</option>
                    <option value="Stat">Stat</option>
                </select>

                <label>Clinical Notes</label>
                <textarea name="ClinicalNotes" placeholder="Add any notes or instructions">@Model.Form.ClinicalNotes</textarea>

                <button type="submit" class="submit-btn">Submit Lab Request</button>
            </form>
        </div>
    }
</div>
