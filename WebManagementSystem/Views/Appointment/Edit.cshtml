@model WebManagementSystem.Models.ViewModels.EditAppointmentViewModel
@{
    ViewData["Title"] = "Edit Appointment";
}

<style>
    :root {
        --navy: #050816;
        --glass: rgba(255,255,255,0.08);
        --gradient-start: #8d79ff;
        --gradient-end: #ff9b61;
        --gold-light: #ffce70;
    }

    body {
        background: radial-gradient(circle at top left, #20254a, #050816 60%);
        color: white;
        font-family: 'Segoe UI', sans-serif;
    }

    .edit-section {
        max-width: 800px;
        margin: 3rem auto;
        padding: 2rem;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 2rem;
        background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
        -webkit-background-clip: text;
        color: transparent;
        text-align: center;
    }

    .edit-card {
        background: rgba(255,255,255,0.06);
        border-radius: 20px;
        padding: 2.5rem;
        border: 1px solid rgba(255,255,255,0.15);
        box-shadow: 0 10px 25px rgba(0,0,0,0.45);
        backdrop-filter: blur(15px);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    label {
        display: block;
        font-weight: 600;
        color: var(--gold-light);
        margin-bottom: 0.5rem;
    }

    input, select, textarea {
        width: 100%;
        padding: 0.9rem;
        border-radius: 12px;
        background: rgba(255,255,255,0.08);
        border: 1px solid rgba(255,255,255,0.2);
        color: white;
        font-size: 1rem;
    }

    input:read-only {
        background: rgba(255,255,255,0.04);
        cursor: not-allowed;
    }

    select {
        color-scheme: dark;
    }

    select option {
        background: #0d1128;
    }

    textarea {
        resize: vertical;
        min-height: 100px;
    }

    .btn-group {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-submit {
        flex: 1;
        padding: 1rem;
        background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
        border: none;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1.1rem;
        cursor: pointer;
        color: white;
    }

    .btn-cancel {
        flex: 1;
        padding: 1rem;
        background: rgba(255,255,255,0.1);
        border: 1px solid rgba(255,255,255,0.2);
        border-radius: 12px;
        font-weight: 600;
        font-size: 1.1rem;
        text-decoration: none;
        text-align: center;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<div class="edit-section">
    <div class="page-title">ðŸ“… Edit Appointment</div>

    <div class="edit-card">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="AppointmentId" />

            <div class="form-group">
                <label>Patient Name</label>
                <input type="text" value="@Model.PatientName" readonly />
            </div>

            <div class="form-group">
                <label>Doctor Name</label>
                <input type="text" value="@Model.DoctorName" readonly />
            </div>

            <div class="form-group">
                <label asp-for="ScheduledDate">Appointment Date *</label>
                <input asp-for="ScheduledDate" type="date" required />
                <span asp-validation-for="ScheduledDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ScheduledTime">Appointment Time *</label>
                <input asp-for="ScheduledTime" type="time" required />
                <span asp-validation-for="ScheduledTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reason">Reason for Visit</label>
                <textarea asp-for="Reason"></textarea>
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status">Status *</label>
                <select asp-for="Status" required>
                    <option value="Scheduled">Scheduled</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                    <option value="No-Show">No-Show</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="btn-group">
                <button type="submit" class="btn-submit">
                    ðŸ’¾ Update Appointment
                </button>
                <a asp-action="Index" class="btn-cancel">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
