<div class="login-wrapper">
    <div class="bg-overlay"></div>
    <div class="particle-layer"></div>

    <!-- Floating icons -->
    <i class="bi bi-heart-pulse floating-icon fi1"></i>
    <i class="bi bi-syringe floating-icon fi2"></i>
    <i class="bi bi-droplet floating-icon fi3"></i>
    <i class="bi bi-activity floating-icon fi4"></i>

    <!-- LEFT HERO IMAGE -->
    <div class="left-hero" id="heroPanel">
        <div class="left-hero-img">
            <img src="/images/bg-medical.jpg"
                 alt="Medical technology"
                 style="width:100%;height:100%;object-fit:cover;border-radius:inherit;">
        </div>
    </div>
    <div class="register-card glassy" id="registerCard">
        <h2 class="gradient-text mb-1">Create an Account</h2>
        <p class="login-sub mb-4">Join MedicaLux and access premium healthcare services</p>

        <form method="post">

            <!-- Row 1 -->
            <div class="form-row">
                <div class="form-col">
                    <label>First Name</label>
                    <input type="text" placeholder="Enter first name" required>
                </div>

                <div class="form-col">
                    <label>Last Name</label>
                    <input type="text" placeholder="Enter last name" required>
                </div>
            </div>

            <!-- Row 2 -->
            <div class="form-row">
                <div class="form-col">
                    <label>Gender</label>
                    <select required>
                        <option disabled selected>Select gender</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                </div>

                <div class="form-col">
                    <label>Date of Birth</label>
                    <input type="date" required>
                </div>
            </div>

            <!-- Row 3 -->
            <div class="form-row">
                <div class="form-col">
                    <label>Phone Number</label>
                    <input type="text" placeholder="03XX-XXXXXXX" required>
                </div>

                <div class="form-col">
                    <label>CNIC</label>
                    <input type="text" placeholder="XXXXX-XXXXXXX-X" required>
                </div>
            </div>

            <!-- Row 4 -->
            <div class="form-row">
                <div class="form-col">
                    <label>Address</label>
                    <textarea rows="1" placeholder="Full address"></textarea>
                </div>

                <div class="form-col">
                    <label>Emergency Contact</label>
                    <input type="text" placeholder="Emergency contact number" required>
                </div>
            </div>

            <!-- Row 5 -->
            <div class="form-row">
                <div class="form-col">
                    <label>Allergies (if any)</label>
                    <textarea rows="1" placeholder="List allergies"></textarea>
                </div>

                <div class="form-col">
                    <label>Chronic Diseases (if any)</label>
                    <textarea rows="1" placeholder="List chronic conditions"></textarea>
                </div>
            </div>

            <!-- Submit -->
            <button class="btn-gold w-100 mt-3" type="submit">Create Account</button>

            <div class="text-center mt-3">
                <a href="/Account/Login" class="text-gold">Already have an account? Login</a>
            </div>

        </form>
    </div>
    </div>
<script>
    (function () {
        const hero = document.getElementById('heroPanel');
        const card = document.getElementById('registerCard');

        if (!hero || !card) return;

        document.addEventListener('mousemove', function (e) {
            const x = (e.clientX / window.innerWidth) - 0.5;
            const y = (e.clientY / window.innerHeight) - 0.5;

            hero.style.transform =
                `translate3d(${x * -20}px, ${y * -10}px, 0)
                 rotateY(${x * -4}deg)
                 rotateX(${y * 2}deg)`;

            card.style.transform =
                `translate3d(${x * 16}px, ${y * 8}px, 0)
                 rotateY(${x * 4}deg)
                 rotateX(${y * -2}deg)`;
        });
    })();
</script>
