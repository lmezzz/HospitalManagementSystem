<nav class="navbar navbar-expand-lg navbar-dark global-nav">
    <div class="container">
        <a class="navbar-brand fw-bold text-white d-flex align-items-center" href="/">
            <span class="brand-dot me-2"></span> MedicaLux
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="mainNav">
            <ul class="navbar-nav align-items-lg-center gap-lg-4">
                <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/Services">Services</a></li>
                <li class="nav-item"><a class="nav-link" href="/Doctors">Doctors</a></li>
                <li class="nav-item"><a class="nav-link" href="/About">About</a></li>
                <li class="nav-item">
                    <a class="btn btn-nav-gold ms-lg-2" href="/Account/Login">Login</a>
