@{
    ViewData["Title"] = "Forgot Password";
}

<style>
    :root {
        --navy: #050816;
        --gold-light: #ffce70;
        --gradient-start: #8d79ff;
        --gradient-mid: #c06bff;
        --gradient-end: #ff9b61;
    }

    body {
        background: radial-gradient(circle at top left, #20254a, #050816 60%);
        font-family: 'Segoe UI', sans-serif;
        color: white;
        overflow-x: hidden;
    }

    /* CENTER WRAPPER */
    .forgot-wrapper {
        min-height: calc(100vh - 70px);
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 3rem 1.5rem;
        position: relative;
    }

    /* BLUR GLASS CARD */
    .forgot-card {
        width: 420px;
        padding: 2.4rem 2rem 2.2rem;
        border-radius: 22px;
        background: radial-gradient(circle at top left, rgba(255,255,255,0.12), rgba(8,11,30,0.9));
        backdrop-filter: blur(22px);
        border: 1px solid rgba(255,255,255,0.22);
        box-shadow: 0 20px 55px rgba(0,0,0,0.7);
        position: relative;
        overflow: hidden;
    }

        /* GLOW RING */
        .forgot-card::before {
            content: "";
            position: absolute;
            inset: -2px;
            border-radius: inherit;
            background: conic-gradient(from 180deg, rgba(255,220,110,0), rgba(255,200,85,0.7), rgba(255,220,110,0));
            opacity: 0;
            animation: glowPulse 6s ease-in-out infinite;
            pointer-events: none;
        }

    @@keyframes glowPulse {
        0%, 100% {
            opacity: 0;
            transform: rotate(0);
        }

        50% {
            opacity: 0.75;
            transform: rotate(45deg);
        }
    }

    .gradient-text {
        background: linear-gradient(90deg, var(--gradient-start), var(--gradient-mid), var(--gradient-end));
        -webkit-background-clip: text;
        color: transparent;
        font-size: 1.8rem;
        font-weight: 700;
    }

    .forgot-sub {
        color: #ced1ea;
        margin-top: 0.5rem;
        font-size: 0.95rem;
    }

    .input-group-custom label {
        color: var(--gold-light);
        font-weight: 600;
        margin-bottom: 0.3rem;
    }

    .input-group-custom input {
        width: 100%;
        padding: 0.75rem 1rem;
        border-radius: 12px;
        background: rgba(4,7,20,0.85);
        border: 1px solid rgba(255,255,255,0.25);
        color: white;
        font-size: 0.95rem;
    }

    .btn-gold {
        background: linear-gradient(110deg, #ffb84d, #ff9d3f);
        padding: 0.65rem;
        border-radius: 18px;
        border: none;
        font-weight: 700;
        width: 100%;
        margin-top: 1.2rem;
        box-shadow: 0 12px 28px rgba(0,0,0,0.55);
        transition: 0.12s ease;
        color: #050816;
    }

        .btn-gold:hover {
            filter: brightness(1.06);
            transform: translateY(-2px);
        }

    .text-gold {
        color: var(--gold-light);
        font-size: 0.85rem;
        text-decoration: none;
    }

        .text-gold:hover {
            color: #fff3c2;
        }
</style>

<!-- ================= CONTENT ================= -->
<div class="forgot-wrapper">
    <div class="forgot-card">

        <h2 class="gradient-text">Forgot Password</h2>
        <p class="forgot-sub mb-4">
            Enter your account email and we will send you a reset link.
        </p>

        <form asp-controller="Account" asp-action="ForgotPassword" method="post">
          
            <div class="input-group-custom mb-3">
                <label for="Email">Email Address</label>
                <input id="Email" name="Email" type="email" placeholder="Enter your email" required />
            </div>

            <button class="btn-gold" type="submit">Send Reset Link</button>

            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="Login" class="text-gold">Back to Login</a>

            </div>
        </form>

    </div>
</div>
