@model WebManagementSystem.Models.ViewModels.VisitListViewModel
@{
    ViewData["Title"] = "Visits";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Patient Visits</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Visit
                </a>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">All Visits</h5>
                </div>
                <div class="card-body">
                    @if (Model.Visits.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Visit ID</th>
                                        <th>Patient</th>
                                        <th>Doctor</th>
                                        <th>Visit Time</th>
                                        <th>Diagnosis</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var visit in Model.Visits)
                                    {
                                        <tr>
                                            <td>@visit.VisitId</td>
                                            <td>@visit.PatientName</td>
                                            <td>@visit.DoctorName</td>
                                            <td>@visit.VisitTime?.ToString("MMM dd, yyyy hh:mm tt")</td>
                                            <td>@visit.Diagnosis</td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@visit.VisitId" class="btn btn-sm btn-info">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@visit.VisitId" class="btn btn-sm btn-warning">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No visits found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
