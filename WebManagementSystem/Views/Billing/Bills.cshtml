@model WebManagementSystem.Models.ViewModels.BillListViewModel
@{
    ViewData["Title"] = "Bills";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Bill Management</h2>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">All Bills</h5>
                </div>
                <div class="card-body">
                    @if (Model.Bills.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Bill ID</th>
                                        <th>Total Amount</th>
                                        <th>Amount Paid</th>
                                        <th>Balance</th>
                                        <th>Status</th>
                                        <th>Created Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bill in Model.Bills)
                                    {
                                        <tr>
                                            <td>@bill.BillId</td>
                                            <td>Rs. @bill.TotalAmount.ToString("N2")</td>
                                            <td>Rs. @bill.AmountPaid.ToString("N2")</td>
                                            <td>Rs. @bill.Balance.ToString("N2")</td>
                                            <td>
                                                @if (bill.Status == "Paid")
                                                {
                                                    <span class="badge bg-success">Paid</span>
                                                }
                                                else if (bill.Status == "Unpaid")
                                                {
                                                    <span class="badge bg-danger">Unpaid</span>
                                                }
                                                else if (bill.Status == "Partial")
                                                {
                                                    <span class="badge bg-warning">Partial</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@bill.Status</span>
                                                }
                                            </td>
                                            <td>@bill.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@bill.BillId" class="btn btn-sm btn-info">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                                @if (bill.Balance > 0)
                                                {
                                                    <a asp-action="ProcessPayment" asp-route-billId="@bill.BillId" class="btn btn-sm btn-success">
                                                        <i class="bi bi-cash"></i> Process Payment
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No bills found in the system.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
