@model WebManagementSystem.Models.ViewModels.PaymentReceiptViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Payment Receipt - @Model.ReferenceNumber</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
            color: #333;
        }
        .header {
            text-align: center;
            border-bottom: 3px solid #28a745;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }
        .header h1 {
            margin: 0;
            color: #28a745;
        }
        .header p {
            margin: 5px 0;
            color: #666;
        }
        .receipt-box {
            border: 2px solid #28a745;
            border-radius: 10px;
            padding: 30px;
            margin: 20px 0;
            background-color: #f8fff9;
        }
        .receipt-row {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #ddd;
        }
        .receipt-row:last-child {
            border-bottom: none;
        }
        .label {
            font-weight: 600;
            color: #666;
        }
        .value {
            font-weight: bold;
            color: #333;
        }
        .amount-paid {
            background-color: #28a745;
            color: white;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            margin: 30px 0;
        }
        .amount-paid h2 {
            margin: 0;
            font-size: 2em;
        }
        .amount-paid p {
            margin: 5px 0 0 0;
            font-size: 0.9em;
        }
        .summary-box {
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 20px;
            margin: 20px 0;
        }
        .summary-row {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
        }
        .summary-row.total {
            font-weight: bold;
            font-size: 1.2em;
            padding-top: 15px;
            border-top: 2px solid #333;
            margin-top: 10px;
        }
        .footer {
            margin-top: 60px;
            padding-top: 20px;
            border-top: 2px solid #ddd;
            text-align: center;
            font-size: 12px;
            color: #666;
        }
        @@media print {
            .no-print {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>PAYMENT RECEIPT</h1>
        <p>Hospital Management System</p>
    </div>

    <div class="receipt-box">
        <div class="receipt-row">
            <span class="label">Receipt Number:</span>
            <span class="value">@Model.ReferenceNumber</span>
        </div>
        <div class="receipt-row">
            <span class="label">Payment ID:</span>
            <span class="value">#@Model.PaymentId</span>
        </div>
        <div class="receipt-row">
            <span class="label">Bill ID:</span>
            <span class="value">#@Model.BillId</span>
        </div>
        <div class="receipt-row">
            <span class="label">Date & Time:</span>
            <span class="value">@Model.PaymentTime.ToString("MMMM dd, yyyy hh:mm tt")</span>
        </div>
        <div class="receipt-row">
            <span class="label">Patient Name:</span>
            <span class="value">@Model.PatientName</span>
        </div>
        <div class="receipt-row">
            <span class="label">Patient Phone:</span>
            <span class="value">@Model.PatientPhone</span>
        </div>
        <div class="receipt-row">
            <span class="label">Payment Method:</span>
            <span class="value">@Model.PaymentMethod</span>
        </div>
    </div>

    <div class="amount-paid">
        <p>Amount Paid</p>
        <h2>Rs. @Model.AmountPaid.ToString("N2")</h2>
    </div>

    <div class="summary-box">
        <h3 style="margin-top: 0; color: #28a745;">Bill Summary</h3>
        <div class="summary-row">
            <span>Total Bill Amount:</span>
            <span>Rs. @Model.TotalBillAmount.ToString("N2")</span>
        </div>
        <div class="summary-row">
            <span>Total Paid (Including This Payment):</span>
            <span>Rs. @Model.TotalPaid.ToString("N2")</span>
        </div>
        <div class="summary-row total">
            <span>Remaining Balance:</span>
            <span>Rs. @Model.RemainingBalance.ToString("N2")</span>
        </div>
    </div>

    @if (Model.RemainingBalance > 0)
    {
        <div style="background-color: #fff3cd; border: 1px solid #ffc107; border-radius: 5px; padding: 15px; margin: 20px 0;">
            <strong>Note:</strong> This bill has a remaining balance of Rs. @Model.RemainingBalance.ToString("N2"). Please make the payment at your earliest convenience.
        </div>
    }
    else
    {
        <div style="background-color: #d4edda; border: 1px solid #28a745; border-radius: 5px; padding: 15px; margin: 20px 0; text-align: center;">
            <strong style="color: #28a745;">âœ“ BILL FULLY PAID</strong>
        </div>
    }

    <div class="footer">
        <p>This is a computer-generated receipt. No signature required.</p>
        <p>Please keep this receipt for your records.</p>
        <p>Thank you for your payment!</p>
    </div>

    <div class="no-print" style="text-align: center; margin-top: 30px;">
        <button onclick="window.print()" style="padding: 10px 30px; background: #28a745; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 16px; margin-right: 10px;">
            Print Receipt
        </button>
        <button onclick="window.close()" style="padding: 10px 30px; background: #6c757d; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 16px;">
            Close
        </button>
    </div>
</body>
</html>
