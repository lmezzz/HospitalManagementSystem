@model WebManagementSystem.Models.ViewModels.EditPrescriptionViewModel
@{
    ViewData["Title"] = "Edit Prescription";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <h2 class="mb-4">Edit Prescription</h2>

            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="PrescriptionId" />
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Patient Name</label>
                                <input type="text" class="form-control" value="@Model.PatientName" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Doctor Name</label>
                                <input type="text" class="form-control" value="@Model.DoctorName" readonly />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Instructions" class="form-label">General Instructions</label>
                            <textarea asp-for="Instructions" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> To modify medications, please create a new prescription.
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Update Prescription
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.PrescriptionId" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
