@model WebManagementSystem.Models.ViewModels.PrescriptionDetailsViewModel
@{
    ViewData["Title"] = "Prescription Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Prescription Details</h2>
                <div>
                    <a asp-action="Print" asp-route-id="@Model.PrescriptionId" class="btn btn-secondary" target="_blank">
                        <i class="bi bi-printer"></i> Print
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.PrescriptionId" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Prescription Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Prescription ID:</strong> @Model.PrescriptionId</p>
                            <p><strong>Patient:</strong> @Model.PatientName</p>
                            <p><strong>Doctor:</strong> @Model.DoctorName</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Created:</strong> @Model.CreatedAt?.ToString("MMMM dd, yyyy hh:mm tt")</p>
                            <p><strong>Status:</strong> 
                                @if (Model.IsDispensed)
                                {
                                    <span class="badge bg-success">Dispensed</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                            </p>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Instructions))
                    {
                        <div class="mt-3">
                            <p><strong>General Instructions:</strong></p>
                            <p>@Model.Instructions</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Prescribed Medications</h5>
                </div>
                <div class="card-body">
                    @if (Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Medication</th>
                                        <th>Strength</th>
                                        <th>Quantity</th>
                                        <th>Dosage</th>
                                        <th>Duration</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>@item.MedicationName</td>
                                            <td>@item.Strength</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.Dosage</td>
                                            <td>@item.Duration</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            No medications prescribed.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
