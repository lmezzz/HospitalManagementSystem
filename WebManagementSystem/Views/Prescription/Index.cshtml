@model WebManagementSystem.Models.ViewModels.PrescriptionListViewModel
@{
    ViewData["Title"] = "Prescriptions";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Prescriptions</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Prescription
                </a>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">All Prescriptions</h5>
                </div>
                <div class="card-body">
                    @if (Model.Prescriptions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Prescription ID</th>
                                        <th>Patient</th>
                                        <th>Created Date</th>
                                        <th>Items</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var prescription in Model.Prescriptions)
                                    {
                                        <tr>
                                            <td>@prescription.PrescriptionId</td>
                                            <td>@prescription.PatientName</td>
                                            <td>@prescription.CreatedAt?.ToString("MMM dd, yyyy")</td>
                                            <td>@prescription.ItemCount items</td>
                                            <td>
                                                @if (prescription.Status == "Dispensed")
                                                {
                                                    <span class="badge bg-success">Dispensed</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Pending</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@prescription.PrescriptionId" class="btn btn-sm btn-info">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                                <a asp-action="Print" asp-route-id="@prescription.PrescriptionId" class="btn btn-sm btn-secondary" target="_blank">
                                                    <i class="bi bi-printer"></i> Print
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No prescriptions found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
